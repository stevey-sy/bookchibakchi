<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookChigiBakChigi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Action bar 설정 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="PopupStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/background_rounded</item>
        <item name="android:dropDownWidth">50dp</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>