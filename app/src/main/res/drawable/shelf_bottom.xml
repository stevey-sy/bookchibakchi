<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 상단 경계선 (책과 선반의 접점) -->
    <item android:top="10dp"> <!-- 선반 상단 부분 -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF0000"
            android:endColor="#FFFFFF"
            android:angle="90" />
            <size android:height="4dp" /> <!-- 얇은 두께 -->
        </shape>
    </item>

    <!-- 흰색 선반 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 흰색 선반 -->
            <size android:height="8dp" /> <!-- 선반 두께 -->
        </shape>
    </item>

    <!-- 선반 그림자 -->
    <item android:top="8dp"> <!-- 선반 아래쪽 그림자 -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
            android:endColor="#D6D6D6"
            android:angle="90" />
        </shape>
    </item>
</layer-list>