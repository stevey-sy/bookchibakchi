<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.bookchigibakchigi.ui.record.RecordViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:bindBackgroundColor="@{viewModel.uiState}">

            <!-- 상단 닫기 버튼 -->
            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:bindCloseBtn="@{viewModel.uiState}"
                android:contentDescription="닫기 버튼" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:id="@+id/llTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:bindCompleteBtnVisibility="@{viewModel.uiState}">

                    <!-- 타이머 표시 -->
                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.timerText}"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        app:bindTextColor="@{viewModel.uiState}"
                        android:layout_marginTop="16dp" />

                    <!-- 상태 텍스트 -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        app:bindTextColor="@{viewModel.uiState}"
                        app:bindReadingStatusText="@{viewModel.uiState}" />

                    <!-- 일시정지/재생 버튼 -->
                    <ImageView
                        android:id="@+id/btnPause"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:adjustViewBounds="true"
                        app:bindPlayBtn="@{viewModel.uiState}"
                        android:contentDescription="일시정지/재생 버튼" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCongrats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animViewComplete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="축하합니다! 한 권의 책을 완독했어요! 🎉"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="총 소요시간"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/tvTotalReadingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.currentBook.getElapsedTimeFormatted()}"
                        android:textSize="26sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                </LinearLayout>
            </FrameLayout>

            <!-- 책 정보 카드 -->
            <LinearLayout
                android:id="@+id/bookInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:padding="16dp"
                android:orientation="horizontal"
                android:elevation="4dp">

                <!-- 책 표지를 감싸는 CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <!-- 책 이미지 -->
                    <ImageView
                        android:id="@+id/ivBookCover"
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:contentDescription="책 표지"
                        android:scaleType="fitXY"
                        app:imageUrl="@{viewModel.currentBook.coverImageUrl}" />
                </androidx.cardview.widget.CardView>

                <!-- 책 정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/tvBookTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.currentBook.title}"
                        android:textSize="18sp"
                        app:bindTextColor="@{viewModel.uiState}"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBookAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.currentBook.getAuthorText()}"
                        android:textSize="14sp"
                        app:bindTextColor="@{viewModel.uiState}"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvBookProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.getBookProgressText()}"
                        android:textSize="14sp"
                        app:bindTextColor="@{viewModel.uiState}"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.currentBook.getElapsedTimeFormatted()}"
                        android:textSize="14sp"
                        app:bindTextColor="@{viewModel.uiState}"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 완료 버튼 -->
            <Button
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ 완료"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:bindCompleteBtnVisibility="@{viewModel.uiState}"
                />

            <!-- 나가기 버튼 -->
            <Button
                android:id="@+id/btnOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔ 나가기"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:bindOutBtnVisibility="@{viewModel.uiState}"/>

        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/anim_congrats" />

    </FrameLayout>




</layout>
