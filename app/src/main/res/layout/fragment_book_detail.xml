<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- ViewModel 선언 -->
        <variable
            name="viewModel"
            type="com.example.bookchigibakchigi.ui.mylibrary.MyLibraryViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/white"
            app:isVisible="@{viewModel.bookShelfItems}">

            <!-- 일러스트 이미지 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_reading"
                android:scaleType="centerCrop"
                android:contentDescription="Empty bookshelf image"
                android:layout_marginBottom="16dp" />

            <!-- 안내 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신의 첫 번째 책을 추가해보세요."
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서 진행도와 기억하고 싶은 문구를 기록할 수 있어요."
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <!-- 액션 버튼 -->
            <Button
                android:id="@+id/btnSearchBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="책 검색하기"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            tools:context=".ui.bookdetail.BookDetailFragment">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:overScrollMode="never"
                    app:submitBookList="@{viewModel.bookShelfItems}" />

<!--                <ImageView-->
<!--                    android:id="@+id/ivBook"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"/>-->

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="40dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:minLines="3"
                    android:text="@{viewModel.currentBook.title}"
                 />

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@{viewModel.currentBook.author}" />

                <TextView
                    android:id="@+id/tvPublisher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@{viewModel.currentBook.publisher}" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    app:isProgressBarVisible="@{viewModel.bookShelfItems}">

                    <!-- 진행 퍼센트를 표시하는 텍스트 -->
                    <TextView
                        android:id="@+id/tvProgressPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"
                        android:layout_alignParentStart="true"
                        android:translationX="0dp"
                        android:text='@{String.valueOf(viewModel.currentBook.progressPercentage) + "%"}'
                        tools:ignore="MissingConstraints" />

                    <!-- 프로그레스바 (백그라운드) -->
                    <View
                        android:id="@+id/progressBarBackground"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_below="@id/tvProgressPercentage"
                        android:background="@color/gray"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true" />

                    <!-- 프로그레스바 (진행도) -->
                    <View
                        android:id="@+id/progressBarForeground"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_below="@id/tvProgressPercentage"
                        android:background="@color/teal_700"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:progressPercentage="@{viewModel.currentBook.progressPercentage}"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/black">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="독서"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="기록"
                        android:textColor="@color/white"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>



</layout>
